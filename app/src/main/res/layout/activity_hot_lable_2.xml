<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_gray_background"
    android:orientation="vertical"
    tools:context="com.team.witkers.activity.find.HotLableActivity">

    <include layout="@layout/topbar_back_2" />

    <LinearLayout
        android:id="@+id/lin_search_lable"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/selector_search_edittext_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/img_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索更多标签"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/most_frm_item_fontsize" />
    </LinearLayout>

    <!--    <com.team.witkers.views.ClearEditText
            android:id="@+id/et_search_hotLable"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/selector_search_edittext_bg"
            android:drawableLeft="@drawable/img_search"
            android:drawablePadding="10dp"
            android:foregroundGravity="left"
            android:hint="搜索更多标签"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/most_frm_item_fontsize" />-->


    <ListView
        android:id="@+id/lv_hotLable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_item_divider"
        android:dividerHeight="1px"
        android:background="@color/white"/>


</LinearLayout>
