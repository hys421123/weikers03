<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundIv_mefrm_head"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/bg_head"
            />
    <LinearLayout

        android:layout_toRightOf="@id/roundIv_mefrm_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--三个item合成linearlayout-->
        <LinearLayout

            android:id="@+id/ll_threeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <!--动态-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="17"
                    android:textSize="16sp"
                    android:textColor="#4a4f53"
                    android:id="@+id/tv_tendencies"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="动态"
                    android:textColor="#a2a6a7"
                    android:textSize="14sp"

                    android:layout_gravity="center_horizontal" />
            </LinearLayout>


            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/division_line"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="2dp"
                />

            <!--关注-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="17"
                    android:textSize="16sp"
                    android:textColor="#4a4f53"
                    android:id="@+id/tv_focus"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="关注"
                    android:textColor="#a2a6a7"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/division_line"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="2dp"
                />

            <!--粉丝-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="17"
                    android:textSize="16sp"
                    android:textColor="#4a4f53"
                    android:id="@+id/tv_fans"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="粉丝"
                    android:textColor="#a2a6a7"
                    android:textSize="14sp"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_bj"
            android:id="@+id/relativeLayout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="2dp"

            android:onClick="bj_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="编辑资料"
                android:textColor="#4a4f53"
                android:textSize="16sp"
                android:id="@+id/textView8"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我就是钢铁侠！"
        android:textColor="#4a4f53"
        android:textSize="16sp"
        android:id="@+id/textView7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
 />

</LinearLayout>