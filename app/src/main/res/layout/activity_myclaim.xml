<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_background_color"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_color"
            app:navigationIcon="@drawable/ic_back_arrow"
            android:fitsSystemWindows="true"
            />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="13dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本周收益"
            android:textSize="17sp"
            />

        <TextView
            android:layout_marginTop="0dp"
            android:layout_marginBottom="2dp"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.0"
            android:textColor="#ECBC25"
            />
    </LinearLayout>

    <!--中间的待完成和 全部订单-->
    <RelativeLayout
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <TextView
        android:textColor="@color/font_gray_color"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待完成"
        android:textSize="15sp"
        />
        <LinearLayout
            android:background="@color/selector_myclaim"
            android:clickable="true"
            android:id="@+id/ll_allOrders"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:textColor="@color/font_gray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部订单"
                android:textSize="13sp"
                android:id="@+id/textView6" />

            <ImageView
                android:padding="3dp"
                android:layout_marginLeft="5dp"
            android:src="@drawable/arrow05"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>