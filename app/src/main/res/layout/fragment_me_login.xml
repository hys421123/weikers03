    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/roundIv_mefrm_head"
                android:layout_width="@dimen/me_frm_head_height"
                android:layout_height="@dimen/me_frm_head_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/me_frm_head_leftmargin"
                android:layout_marginRight="16dp"
                android:layout_marginTop="@dimen/me_frm_head_topmargin"
                android:src="@drawable/ic_default_null_gray"
                app:riv_oval="true"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_frm_head_height"
                android:layout_marginTop="@dimen/me_frm_head_topmargin"
                android:layout_toRightOf="@id/roundIv_mefrm_head">

                <!--三个item合成linearlayout-->
                <LinearLayout

                    android:id="@+id/ll_threeItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/me_frm_three_rightmargin"
                    android:orientation="horizontal">

                    <!--动态-->
                    <LinearLayout
                        android:id="@+id/ll_pubMissions"
                        android:clickable="true"
                        android:background="@color/selector_pub_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_tendencies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#4a4f53"
                            android:textSize="@dimen/me_frm_font_big" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="任务"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#a2a6a7"

                            android:textSize="@dimen/me_frm_font_small" />
                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="11dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/division_line" />

                    <!--关注-->
                    <LinearLayout
                        android:id="@+id/ll_concerns"
                        android:clickable="true"
                        android:background="@color/selector_pub_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_focus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#4a4f53"
                            android:textSize="@dimen/me_frm_font_big" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="关注"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#a2a6a7"
                            android:textSize="@dimen/me_frm_font_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="11dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/division_line" />

                    <!--粉丝-->
                    <LinearLayout
                        android:id="@+id/ll_fans"
                        android:clickable="true"
                        android:background="@color/selector_pub_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#4a4f53"
                            android:textSize="@dimen/me_frm_font_big" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="粉丝"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#a2a6a7"
                            android:textSize="@dimen/me_frm_font_small" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rel_editDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_bj"
                    android:paddingLeft="10dp"

                    >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="编辑资料"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#4a4f53"
                        android:textSize="@dimen/me_frm_font_big" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/me_frm_head_leftmargin"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="1"

            android:textColor="#4a4f53"
            android:textSize="@dimen/me_frm_font_big" />


    </LinearLayout>


    <!--发布和认领-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/me_frm__item_bigmargin"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.team.witkers.views.MyPubItem
            android:id="@+id/customView_myPub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/selector_pub_item"
            android:clickable="true"
            app:leftIcon="@drawable/ic_me_mypub"
            app:rightIconVisibility="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/division_line" />
        <!--@android:color/black-->
        <!--@color/division_line-->

        <com.team.witkers.views.MyPubItem
            android:id="@+id/customView_myClaim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/selector_pub_item"
            android:clickable="true"
            app:leftIcon="@drawable/ic_me_myclaim"
            app:myPubTitle="微客中心 (我的认领)"
            app:rightIconVisibility="false" />
    </LinearLayout>
    <!--以上linearlayout发布和认领-->

    <com.team.witkers.views.MyPubItem
        android:id="@+id/customView_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/me_frm__item_bigmargin"
        android:background="@color/selector_pub_item"
        android:clickable="true"
        app:leftIcon="@drawable/ic_me_setting"
        app:myPubTitle="设置"
        app:rightIconVisibility="false" />

    <com.team.witkers.views.MyPubItem
        android:id="@+id/customView_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/me_frm__item_bigmargin"
        android:background="@color/selector_pub_item"
        android:clickable="true"
        android:visibility="invisible"
        app:leftIcon="@drawable/ic_me_setting"
        app:myPubTitle="退出登录"
        app:rightIconVisibility="false" />


</LinearLayout>