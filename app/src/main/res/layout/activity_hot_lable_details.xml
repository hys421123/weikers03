<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.team.witkers.activity.find.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:gravity="center_vertical">

<!--        <ImageView
            android:clickable="true"
            android:id="@+id/id_topBack"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_back" />-->

        <com.team.witkers.views.ClearEditText
            android:id="@+id/et_lable_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_search_white_24dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:hint="搜索任务标签"
            android:lines="1"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@null"
            />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_test"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="@color/msg_slidebar_color"
        app:tabSelectedTextColor="@color/msg_slidebar_color"
        app:tabTextColor="@color/colorBlack"
        style="@style/MyCustomTabLayout"
        android:layout_marginBottom="1dp"
        />
<!--height 45 -->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_test"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       />
</LinearLayout>
