<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"

        app:elevation="0dp"
        >
        <!--android:theme="@style/AppTheme.AppBarOverlay"-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_color"
            app:navigationIcon="@drawable/ic_back_arrow"
            />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rl_bindphone"
        android:layout_marginTop="@dimen/most_frm_item_bigmargin"
        android:clickable="true"
        android:background="@color/selector_pub_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/most_frm_item_height"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机"
            android:textSize="@dimen/most_frm_item_fontsize"
            android:layout_marginLeft="@dimen/most_frm_item_leftmargin"
            />
        <TextView
            android:id="@+id/tv_bindNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="186*****489"
            android:textSize="@dimen/most_frm_item_fontsize"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/most_frm_item_leftmargin"
            />
    </RelativeLayout>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@color/division_line"
        />

    <RelativeLayout
        android:id="@+id/rl_bindmail"
        android:clickable="true"
        android:background="@color/selector_pub_item"

        android:layout_width="match_parent"
        android:layout_height="@dimen/most_frm_item_height"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定邮箱"
            android:textSize="@dimen/most_frm_item_fontsize"
            android:layout_marginLeft="@dimen/most_frm_item_leftmargin"
            />

        <TextView
            android:id="@+id/tv_bindMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12***21@qq.com"
            android:textSize="@dimen/most_frm_item_fontsize"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/most_frm_item_leftmargin"
            />
    </RelativeLayout>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@color/division_line"
        />

    <RelativeLayout
        android:id="@+id/rl_changpwd"
        android:layout_marginTop="@dimen/most_frm_item_bigmargin"
        android:clickable="true"
        android:background="@color/selector_pub_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/most_frm_item_height"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改登录密码"
            android:textSize="@dimen/most_frm_item_fontsize"
            android:layout_marginLeft="@dimen/most_frm_item_leftmargin"
            />
    </RelativeLayout>



</LinearLayout>
