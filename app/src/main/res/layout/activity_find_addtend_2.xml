<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:theme="@style/ToolbarTheme"
        />

    <!--<com.hideactive.widget.EmoticonsEditText-->
        <!--android:id="@+id/input_eare"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/toolbar"-->
        <!--android:padding="@dimen/dimen_small"-->
        <!--android:background="@color/white"-->
        <!--android:inputType="textMultiLine"-->
        <!--android:textColor="@color/text_color_1"-->
        <!--android:textSize="16sp"-->
        <!--android:maxLength="200"-->
        <!--android:gravity="left|top"-->
        <!--android:minLines="6"-->
        <!--android:hint="说点什么吧">-->
    <!--</com.hideactive.widget.EmoticonsEditText>-->

    <EditText
        android:padding="8dp"
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        android:maxLength="200"
        android:minLines="6"
        android:hint="说点什么吧"
        android:gravity="left|top"
        />

    <RelativeLayout
        android:id="@+id/show_image_eare"
        android:layout_below="@+id/et_input"
        android:layout_marginLeft="@dimen/addtend_padding"
        android:layout_marginRight="@dimen/addtend_padding"
        android:layout_marginTop="@dimen/addtend_padding"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_addImg"
            android:src="@drawable/ic_camera"
            android:scaleType="centerCrop"
             android:layout_width="112dp"
            android:layout_height="112dp"/>
        <GridView
            android:visibility="gone"
            android:columnWidth="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridView"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorBlack"/>
        <LinearLayout
            android:background="@color/white"
            android:fillViewport="true"
            android:id="@+id/operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/addtend_padding"
            android:paddingRight="@dimen/addtend_padding"
            android:layout_below="@+id/input_eare"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_photo"
                android:src="@drawable/selector_addtend_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/addtend_padding"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/ib_emoj"
                android:src="@drawable/selector_addtend_emoj"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/addtend_padding"
                android:background="#00000000"/>
            <TextView
                android:id="@+id/tv_input_length"
                android:text="200"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorBlack"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/pager_emo"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    </LinearLayout>

</RelativeLayout>
