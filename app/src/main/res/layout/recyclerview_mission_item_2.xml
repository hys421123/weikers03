<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:id="@+id/ll_missionState_itemView"
    >

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#e2e3de"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="12dp">

        <!--<ImageView-->
        <!--android:id="@+id/id_head"-->
        <!--android:layout_width="46dp"-->
        <!--android:layout_height="46dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:src="@drawable/default_head"-->
        <!--app:riv_corner_radius="5dp" />-->

        <!--android:paddingTop="10dp"-->
        <!--头像-->
        <com.makeramen.roundedimageview.RoundedImageView

            android:clickable="true"
            android:id="@+id/round_head"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_default_null_gray"
            app:riv_corner_radius="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <!-- 右边-->
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal"
            >
            <!--姓名 地址-->
            <LinearLayout
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--用户名-->
                <TextView
                    android:id="@+id/tv_takeoutfrm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:textColor="@color/black_light"
                    android:textSize="15sp" />

                <!--显示  地址-->
                <TextView
                    android:id="@+id/tv_takeoutfrm_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="3dp"
                    android:layout_weight="1"

                    android:textColor="@color/colorLine"
                    android:textSize="12.8sp"
                    android:ellipsize="end"/>

            </LinearLayout>

            <!--时间-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_takeoutfrm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""

                    android:textColor="@color/black_light"
                    android:textSize="15sp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="完成"
                    android:textColor="@color/colorLine"
                    android:textSize="12.8sp"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <!--佣金-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"

                android:orientation="vertical">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_takeoutfrm_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black_light"
                    android:textSize="15sp" />

                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="佣金"
                    android:textColor="@color/colorLine"
                    android:textSize="12.8sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!--任务描述-->
    <TextView
        android:id="@+id/tv_takeoutfrm_mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:maxLines="3"
        android:textColor="@color/black_light"
        android:lineSpacingMultiplier="1.3"
        android:textScaleX="1.01"
        android:layout_marginBottom="10dp"
        android:textSize="14.2sp"
        android:layout_marginTop="8dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#e2e3de"
        android:layout_height="2px" />

</LinearLayout>


