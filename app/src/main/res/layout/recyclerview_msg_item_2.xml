<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_msg"
    android:clickable="true"
    android:background="@color/white">

        <!--头像姓名-->
        <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/roundIv_tendComment_head"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_default_null_gray"
                app:riv_oval="true"
                android:layout_width="43dp"
                android:layout_height="43dp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tendComment"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.8sp"
                    android:textScaleX="1.03"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:textColor="@color/font_gray_color"
                    android:layout_marginTop="6dp"
                    android:id="@+id/tv_tendCommentPubtime"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.8sp" />

            </LinearLayout>

        </LinearLayout>
        <!--  上面是头像姓名-->
    <View
        android:layout_marginTop="8dp"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/division_line"
        />
    <!--</LinearLayout>-->
</LinearLayout>